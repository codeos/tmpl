

<%= render 'pages/nav_coffee', :sections => @sections %>

<% @sections.each_with_index do |section,index| %>

  <% bg_color = "bg-color-#{index % 3}" %> 
  <% text_color = (section.photo? ? "photo" : "no-photo") %> 

  <section class="<%= bg_color %> <%= 'first' if index == 0 %>" id="section<%= index %>">
      <div class="cover submarine" style="background-image: url(
              <%= image_path section.photo if section.photo %>); position: relative;">

        <div class="center caption">
          <div class="container">
            <div class="row">
              <div class="col-lg-12">

                <% if index == 0 && @page.logo %>
                  <div style="width:150px; height:150px; margin: 0 auto;">
                    <%= image_tag @page.logo , style: "width:100%; height:100%;", class: 'img-circle' %>
                  </div>
                <% end %>
                
                <% if index == 0 %> 
                  <h1 class="<%= text_color %>"><%= section.text %></h2>
                <% else %>
                  <h2 class="<%= text_color %>"><%= section.text %></h2>
                <% end %> 
              </div><!-- col-lg-12-->
            </div><!-- row -->
          </div><!-- container -->
        </div><!-- caption -->
        
      </div><!-- cover -->
    <% if index != @sections.size-1 %>
      <a class="nav-next" href="#section<%= index + 1 %>"><i class="icon-chevron-down"></i></a>
    <% end %>
  </section>

<% end %>

<a href="#top" id="toTop">^</i></a>

